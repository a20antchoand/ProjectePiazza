<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestAuth" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFC46D</item>
        <item name="colorPrimaryVariant">#FFB74D</item>
        <item name="colorOnPrimary">#f4f4f4</item>

        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:textColor">#000000</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2196F3</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#253F51</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.TestAuth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/lum_soft_09</item>
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimary</item>
    </style>

</resources>