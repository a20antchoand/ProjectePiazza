<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="background">?colorOnPrimary</item>
    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="circular_small">
        <item name="cornerSize">25%</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyAppTheme.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF0000</item>
    </style>

</resources>